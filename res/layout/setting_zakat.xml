<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity" >
	
		
        
        <Button
            android:id="@+id/btBatal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btSimpan"
            android:layout_alignBottom="@+id/btSimpan"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dip"
            android:text="Batal" />

        <TextView
            android:id="@+id/tvEmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Default Harga Emas" />

        <EditText
            android:id="@+id/etEmas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvEmas"
            android:ems="10"
            android:inputType="number" >
			
            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/tvPerak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etEmas"
            android:layout_marginTop="22dp"
            android:text="Default harga Perak" />

        <EditText
            android:id="@+id/etPerak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvPerak"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/tvPokok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/etPerak"
            android:layout_marginTop="22dp"
            android:text="Default Harga Bahan Pokok" />

        <EditText
            android:id="@+id/etPokok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvPokok"
            android:ems="10"
            android:inputType="number" />

        <Button
            android:id="@+id/btSimpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/etPokok"
            android:layout_below="@+id/etPokok"
            android:layout_marginTop="10dip"
            android:text="Simpan" />

</RelativeLayout>