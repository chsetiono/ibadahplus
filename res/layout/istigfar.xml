<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Istigfar" >

    <ImageButton
        android:id="@+id/BtResetIstighfar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/BtPlusIstighfar"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/icon_reset" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignLeft="@+id/BtSound"
        android:layout_below="@+id/arabIstighfar"
        android:text="Astaghfirullah hal adzim"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Aku mohon ampun kepada Allah yang Maha Agung"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/arabIstighfar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="اَسْتَغْفِرُ اَللّهَ الْعَظِیْمَ"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/countIstighfar"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textSize="36dp" />

    <ImageButton
        android:id="@+id/BtPlusIstighfar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/BtSound"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/icon_plus" />

    <ImageButton
        android:id="@+id/BtSound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="11dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/sound_off" />

</RelativeLayout>