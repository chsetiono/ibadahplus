<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Tasbih" >

    <TextView
        android:id="@+id/artiTasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arabTasbih"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
         android:textSize="18dp"
        android:text="Subhanallah" />

    <TextView
        android:id="@+id/latinTasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/artiTasbih"
        android:layout_below="@+id/artiTasbih"
        android:layout_marginTop="23dp"
         android:textSize="18dp"
        android:text="“Maha Suci Allah" />

    <ImageButton
        android:id="@+id/BtSound"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/BtPlusTasbih"
        android:layout_alignLeft="@+id/latinTasbih"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/sound_on" />

    <ImageButton
        android:id="@+id/BtResetTasbih"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/BtPlusTasbih"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/icon_reset" />

    <ImageButton
        android:id="@+id/BtPlusTasbih"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/icon_plus" />

    <TextView
        android:id="@+id/arabTasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:lineSpacingExtra="15dp"
        android:text="سُبْحَانَ اللّهُ "
        android:textSize="36dp" />

    <TextView
        android:id="@+id/countTasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtPlusTasbih"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36dp" />

</RelativeLayout>